{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "types": [
      "cypress",
      "node",
      "jasmine",
      "cypress-file-upload",
      "@4tw/cypress-drag-drop",
      "cypress-real-events",
      "cy-verify-downloads"
    ],
    "paths": {
      "@helper/*": ["cypress/helper/*"]
    }
  }
}
